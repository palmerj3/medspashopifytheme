<section class="hero-banner"{% if section.settings.background != blank %} style="background-image: url('{{ section.settings.background | image_url: width: 2400 }}');"{% endif %}>
  <div class="hero-banner__inner">
    {% if section.settings.eyebrow != blank %}
      <p class="hero-banner__eyebrow section-eyebrow">{{ section.settings.eyebrow }}</p>
    {% endif %}
    <h1 class="hero-banner__heading">{{ section.settings.heading }}</h1>
    {% if section.settings.copy != blank %}
      <p class="hero-banner__copy">{{ section.settings.copy }}</p>
    {% endif %}
    <div class="hero-banner__actions">
      {% if section.settings.primary_label != blank and section.settings.primary_link != blank %}
        <a href="{{ section.settings.primary_link }}" class="btn">{{ section.settings.primary_label }}</a>
      {% endif %}
      {% if section.settings.secondary_label != blank and section.settings.secondary_link != blank %}
        <a href="{{ section.settings.secondary_link }}" class="btn btn--ghost">{{ section.settings.secondary_label }}</a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Medspa & wellness"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Science-led skin transformations"
    },
    {
      "type": "textarea",
      "id": "copy",
      "label": "Copy",
      "default": "Personalized treatments and cosmeceuticals designed to restore balance, clarity, and confidence."
    },
    {
      "type": "text",
      "id": "primary_label",
      "label": "Primary button label",
      "default": "Schedule a visit"
    },
    {
      "type": "url",
      "id": "primary_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_label",
      "label": "Secondary button label",
      "default": "Shop skincare"
    },
    {
      "type": "url",
      "id": "secondary_link",
      "label": "Secondary button link"
    }
  ],
  "presets": [
    {
      "name": "Hero banner"
    }
  ]
}
{% endschema %}
