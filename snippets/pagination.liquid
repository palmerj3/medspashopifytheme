{% if paginate.pages > 1 %}
  <nav class="pagination" role="navigation" aria-label="Pagination">
    {% if paginate.previous %}
      <a class="pagination__prev" href="{{ paginate.previous.url }}">{{ 'general.pagination.previous' | t }}</a>
    {% endif %}
    <ul class="pagination__list" role="list">
      {% for part in paginate.parts %}
        <li>
          {% if part.is_link %}
            <a href="{{ part.url }}" class="pagination__link">{{ part.title }}</a>
          {% else %}
            <span class="pagination__link pagination__link--current">{{ part.title }}</span>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
    {% if paginate.next %}
      <a class="pagination__next" href="{{ paginate.next.url }}">{{ 'general.pagination.next' | t }}</a>
    {% endif %}
  </nav>
{% endif %}
